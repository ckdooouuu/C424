<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.C424" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="dialogTheme" parent="@android:style/Theme.Dialog">
        <!--        <item name="android:windowIsFloating">false</item> &lt;!&ndash;是否浮现在activity之上&ndash;&gt;-->
        <item name="android:windowNoTitle">true</item> <!--无标题-->
        <item name="android:windowBackground">@android:color/transparent</item> <!--背景透明  如果不加，就会有背景-->
    </style>

    <declare-styleable name="GradientFrameStyle">
        <attr name="frameTextSize" format="dimension" />
        <attr name="frameTextColor" format="color" />
        <attr name="frameStartColor" format="color" />
        <attr name="frameEndColor" format="color" />
        <attr name="frameRectRadius" format="dimension" />
        <attr name="frameText" format="string" />
    </declare-styleable>

</resources>